{
  "name": "minesweeper",
  "version": "0.0.1",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build:markup": "node ./render_static.js",
    "gzip": "gzip -k9nr dist",
    "build": "rollup -c && npm run build:markup && npm run gzip",
    "watch:rollup": "rollup -c -w",
    "watch": "run-p build:markup watch:rollup",
    "serve": "http-server dist -c-1 -g",
    "fmt": "prettier --write 'src/**/*.{ts,tsx}' *.{js,json,md} && npm run lintfix",
    "lint": "tslint -t verbose -c tslint.json 'src/**/*.{ts,tsx}'",
    "lintfix": "tslint -t verbose -c tslint.json --fix 'src/**/*.{ts,tsx}'",
    "fmt_test": "test $(prettier -l 'src/**/*.{ts,tsx}' *.{js,json,md} | wc -l) -eq 0",
    "test": "npm run fmt_test && npm run lint && npm run build",
    "deploy": "netlify deploy --dir=dist",
    "deploy:prod": "netlify deploy --dir=dist --prod"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm test"
    }
  },
  "author": "Surma <surma@surma.link>",
  "license": "Apache-2.0",
  "dependencies": {
    "@babel/core": "^7.3.4",
    "@babel/plugin-syntax-dynamic-import": "^7.2.0",
    "@babel/polyfill": "^7.2.5",
    "@babel/preset-env": "^7.3.4",
    "acorn-walk": "^6.1.1",
    "comlink": "^4.0.0-alpha.4",
    "ecstatic": "^3.3.1",
    "ejs": "^2.6.1",
    "fast-async": "^7.0.6",
    "find": "^0.3.0",
    "idb-keyval": "^3.1.0",
    "lit-html": "^1.0.0",
    "magic-string": "^0.25.2",
    "preact": "^8.3.1",
    "puppeteer": "^1.13.0",
    "resize-observer-polyfill": "^1.5.1",
    "rimraf": "^2.6.2",
    "rollup": "^1.1.2",
    "rollup-plugin-babel": "^4.3.2",
    "rollup-plugin-entrypoint-hashmanifest": "^0.1.2",
    "rollup-plugin-loadz0r": "^0.7.0",
    "rollup-plugin-node-resolve": "^4.0.0",
    "rollup-plugin-postcss": "^2.0.3",
    "rollup-plugin-terser": "^4.0.4",
    "rollup-plugin-typescript2": "^0.19.2",
    "typed-css-modules": "^0.4.2",
    "typescript": "^3.3.3333",
    "web-streams-polyfill": "^1.3.2"
  },
  "devDependencies": {
    "http-server": "^0.11.1",
    "husky": "^1.3.1",
    "netlify-cli": "^2.8.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.16.4",
    "tslint": "^5.12.1"
  },
  "babel": {
    "presets": [
      "@babel/env"
    ]
  }
}
